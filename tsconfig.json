{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "jest", "node"],
    "jsx": "react-jsx"
  },
  "include": ["src", "**/*.test.ts", "**/*.test.tsx"]
}
